                            </thead>
                            <tbody class="fw-semibold text-gray-600">
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <div class="d-flex align-items-center">

                                                <div class="ms-5">
                                                    <!--begin::Title-->
                                                    <a href="edit-product.html" class="text-gray-800 text-hover-primary fs-5 fw-bold" data-kt-ecommerce-product-filter="product_name">@item.ProductName</a>
                                                    <!--end::Title-->
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-left pe-0">
                                            <span class="fw-bold">@item.Amount</span>
                                           
                                        </td>
                                        <td class="text-left pe-0" data-order="14">
                                            <span class="fw-bold ms-3">@item.SellPrice ₺</span>
                                        </td>
                                        <td class="text-left pe-0">@item.EntryTime</td>
                                        <td class="text-left pe-0">@item.EndTime</td>


                                        <td class="text-right">
                                            <a href="#" onclick="openUpdateModal()" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                                Düzenle
                                                <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                            </a>
                                            <!--begin::Menu-->
                                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                                <!--begin::Menu item-->
                                                <div class="menu-item px-3">
                                                    <a href="#" class="menu-link px-3" data-bs-toggle="modal" data-id="@item.Id" data-bs-target="#kt_modal_1">
                                                        Güncelle
                                                    </a>

                                                </div>
                                                <!--begin::Menu item-->
                                                <div class="menu-item px-3">
                                                    <a href="#" onclick="RemoveStock(@item.Id)" class="menu-link px-3" data-kt-ecommerce-product-filter="delete_row">
                                                        Sil
                                                    </a>
                                                </div>
                                                <!--end::Menu item-->
                                            </div>
                                            <!--end::Menu-->
                                        </td>
                                    </tr>

                                    <div class="modal fade" tabindex="-1" id="kt_modal_1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h3 class="modal-title">Modal title</h3>

                                                    <!--begin::Close-->
